<p id="notice"><%= notice %></p>

<h1>Sub Menus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_menus.each do |sub_menu| %>
      <tr>
        <td><%= sub_menu.name %></td>
        <td><%= sub_menu.is_show %></td>
        <td><%= link_to 'Show', sub_menu %></td>
        <td><%= link_to 'Edit', edit_sub_menu_path(sub_menu) %></td>
        <td><%= link_to 'Destroy', sub_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub Menu', new_sub_menu_path %>
